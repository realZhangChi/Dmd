<Modal @ref="_modal">
    <ModalContent IsCentered="true" Size="ModalSize.Large">
        <ModalHeader>
            <ModalTitle>Add New Entity</ModalTitle>
            <CloseButton Clicked="@CloseModal" />
        </ModalHeader>
        <ModalBody>
            <div class="mb-3">
                <label class="form-label" for="entityName">Name</label>
                <input type="text" class="form-control" id="entityName" @bind="EntityModel.Name" />
            </div>
            <div class="mb-3">
                <label class="form-label">Properties</label>
                <button class="btn btn-sm btn-outline-primary m-3" @onclick="AddProperty"><i class="fa fa-plus"></i></button>
                <div>
                    @foreach (var property in EntityModel.Properties)
                    {
                        <PropertyEditor Property="@property"></PropertyEditor>
                    }
                </div>
            </div>
        </ModalBody>
        <ModalFooter>
            <Button Color="Color.Secondary" Clicked="@CloseModal">Close</Button>
            <Button Color="Color.Primary" Clicked="@SaveAsync">Save Changes</Button>
        </ModalFooter>
    </ModalContent>
</Modal>